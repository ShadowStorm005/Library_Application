<Page
    x:Class="Library_application.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Library_application"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF1A1A1A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MainMenuGrid" Grid.Column="0" Background="#FF2E2E2E">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TitleText" 
                       HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Welcome To The Library Management Application!" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <Button x:Name="RegisterNewBookButton" 
                    Content="Register a New Book To The Library" 
                    Grid.Row="1" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RegisterNewBookButton_Click"/>
            <Button x:Name="RemoveBookButton" 
                    Content="Remove a Book From The Library" 
                    Grid.Row="2" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RemoveBookButton_Click"/>
            <Button x:Name="RegisterNewCustomerButton" 
                    Content="Register a New Customer To The Library" 
                    Grid.Row="3" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RegisterNewCustomerButton_Click"/>
            <Button x:Name="RemoveCustomerButton" 
                    Content="Remove a Customer From The Library" 
                    Grid.Row="4" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RemoveCustomerButton_Click"/>
            <Button x:Name="LendBookToCustomerButton" 
                    Content="Lend Out a Book To a Customer" 
                    Grid.Row="5" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="LendBookToCustomerButton_Click"/>
            <Button x:Name="ReturnBookFromCustomerButton" 
                    Content="Return a Book From a Customer" 
                    Grid.Row="6" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="ReturnBookFromCustomerButton_Click"/>
            <Button x:Name="ShowInformationOnCustomersButton" 
                    Content="Show Information On The Customers" 
                    Grid.Row="7" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="ShowInformationOnCustomersButton_Click"/>
            <Button x:Name="SeeAllBooksButton" 
                    Content="See All Books In The Library" 
                    Grid.Row="8" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="SeeAllBooksButton_Click"/>
            <Button x:Name="ExitButton" 
                    Content="Exit" 
                    Grid.Row="9" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="ExitButton_Click"/>
        </Grid>
        <Grid x:Name="RegisterNewBookGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Register a New Book To The Library" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="NewBookTitleTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="2" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The Title Of The New Book" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <TextBox x:Name="NewBookAuthorTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="3" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The Author Of The New Book" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <TextBox x:Name="NewBookISBNTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="4" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter a Unique ISBN Number For The New Book" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <Button x:Name="AddNewBookToLibraryButton" 
                    Content="Register The Book To The Library" 
                    Grid.Row="5" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="AddNewBookToLibraryButton_Click"/>
        </Grid>
        <Grid x:Name="RemoveBookGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Remove a Book From The Library" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="RemoveBookISBNTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="2" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ISBN Of The Book To Be Removed" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <Button x:Name="RemoveBookFromLibraryButton" 
                    Content="Remove The Book From The Library" 
                    Grid.Row="3" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RemoveBookFromLibraryButton_Click"/>
        </Grid>
        <Grid x:Name="RegisterNewCustomerGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Register a New Customer" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="NewCustomerNameTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="2" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The Name Of The New Customer" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <TextBox x:Name="NewCustomerIDTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="3" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ID Of The New Customer" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <Button x:Name="AddNewCustomerToLibraryButton" 
                    Content="Register The Customer To The Library" 
                    Grid.Row="4" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="AddNewCustomerToLibraryButton_Click"/>
        </Grid>
        <Grid x:Name="RemoveCustomerGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Remove a Customer From The Library" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="RemoveCustomerIDTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="2" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ID Of The Customer To Be Removed" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <Button x:Name="RemoveCustomerFromLibraryButton" 
                    Content="Remove The Customer From The Library" 
                    Grid.Row="3" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="RemoveCustomerFromLibraryButton_Click"/>
        </Grid>
        <Grid x:Name="LendBookToCustomerGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Enter a Customer ID And Select a Book You Wish To Borrow or Reserve" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBlock HorizontalAlignment="Left" 
                       Margin="113,0,0,0" 
                       Grid.Row="2" 
                       TextWrapping="Wrap" 
                       Text="Title | Author | ISBN | Avalible | Reserved" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="LendOutBookCustomerIDTextBox" 
                     HorizontalAlignment="Left" 
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ID Of The Customer That Will Borrow The Book" 
                     PlaceholderForeground="#FFFAFAFA" 
                     Margin="50,0,0,0"/>
            <TextBox x:Name="LendOutSearchBookTitleTextBox" 
                     HorizontalAlignment="Right" 
                     Margin="0,0,50,0" 
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Search For a Title" 
                     PlaceholderForeground="#FFFAFAFA" 
                     Height="32" 
                     Width="130" 
                     TextChanged="LendOutSearchedBooksListView_FilterUpdate"/>
            <TextBox x:Name="LendOutSearchBookAuthorTextBox" 
                     HorizontalAlignment="Right" 
                     Margin="0,0,230,0" 
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Search For An Auhor" 
                     PlaceholderForeground="#FFFAFAFA" 
                     Height="32" 
                     Width="150" 
                     TextChanged="LendOutSearchedBooksListView_FilterUpdate"/>
            <CheckBox x:Name="LendOutSearchAvalibleCheckBox" 
                      HorizontalAlignment="Right" 
                      Margin="0,0,450,0" 
                      Grid.Row="1"
                      VerticalAlignment="Center" 
                      Click="LendOutSearchAvalibleCheckBox_Toggle">
                <TextBlock Text="Show Only Avalible Books" Foreground="#FFFAFAFA"/>
            </CheckBox>
            <Button x:Name="BorrowBookButton" 
                    Content="Lend Out The Book To The Customer" 
                    Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA"
                    Click="BorrowBookButton_Click"/>
            <Button x:Name="ReserveBookButton" 
                    Content="Reserve The Book" 
                    Grid.Row="2" 
                    HorizontalAlignment="Right"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Margin="0,0,150,0" 
                    Click="ReserveBookButton_Click"/>
            <ListView x:Name="LendOutSearchedBooksListView" Grid.Row="3">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Details}" 
                                   Foreground="#FFFAFAFA" 
                                   FontSize="16"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid x:Name="ReturnBookGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Return a Book From a Customer" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="ReturnBookISBNTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="2" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ISBN Of The Book To Be Returned" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <TextBox x:Name="ReturnBookCustomerIDTextBox" 
                     HorizontalAlignment="Center" 
                     Grid.Row="3" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Enter The ID Of The Customer That Is Returning The Book" 
                     PlaceholderForeground="#FFFAFAFA"/>
            <Button x:Name="ReturnBookButton" 
                    Content="Return Book" 
                    Grid.Row="4" 
                    HorizontalAlignment="Center"
                    Background="#FF3D3D3D" 
                    BorderBrush="#FF666666" 
                    Foreground="#FFFAFAFA" 
                    Click="ReturnBookButton_Click"/>
        </Grid>
        <Grid x:Name="ShowInformationOnCustomersGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="See Information On The Customers And Their Borrowed Books" 
                       VerticalAlignment="Center" 
                       Grid.ColumnSpan="2"
                       Foreground="#FFFAFAFA"/>
            <TextBlock HorizontalAlignment="Center" 
                       Grid.Row="1" 
                       Grid.Column="0"
                       TextWrapping="Wrap" 
                       Text="List Of All Customers" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBlock HorizontalAlignment="Center" 
                       Grid.Row="1" 
                       Grid.Column="1"
                       TextWrapping="Wrap" 
                       Text="List Of The Selected Customers Borrowed Books" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <ListView x:Name="CustomerInformationListView" 
                      Grid.Row="2"
                      Grid.Column="0" 
                      ItemClick="CustomerInformationListView_ItemClick" 
                      IsItemClickEnabled="True" 
                      Header="Name | ID | Borrowed Books | Reserved Book ISBN"
                      Foreground="#FFFAFAFA">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="#FFFAFAFA" 
                                   FontSize="16"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView x:Name="CustomersBorrowedBooksListView" 
                      Grid.Column="1" 
                      Grid.Row="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="#FFFAFAFA" 
                                   FontSize="16"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid x:Name="SeeAllBooksGrid" Grid.Column="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       Text="Search For Any Book In The Library" 
                       VerticalAlignment="Center"
                       Foreground="#FFFAFAFA"/>
            <TextBox x:Name="SearchBookTitleTextBox" 
                     HorizontalAlignment="Right" 
                     Margin="0,0,50,0" 
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Search For a Title" 
                     PlaceholderForeground="#FFFAFAFA" 
                     Height="32" 
                     Width="130" 
                     TextChanged="SearchedBooksListView_FilterUpdate"/>
            <TextBox x:Name="SearchBookAuthorTextBox" 
                     HorizontalAlignment="Right" 
                     Margin="0,0,230,0" 
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Background="#FF3D3D3D" 
                     BorderBrush="#FF666666" 
                     Foreground="#FFFAFAFA" 
                     PlaceholderText="Search For An Auhor" 
                     PlaceholderForeground="#FFFAFAFA" 
                     Height="32" 
                     Width="150" 
                     TextChanged="SearchedBooksListView_FilterUpdate"/>
            <CheckBox x:Name="SearchAvalibleCheckBox" 
                      HorizontalAlignment="Right" 
                      Margin="0,0,450,0" 
                      Grid.Row="1"
                      VerticalAlignment="Center" 
                      Click="SearchAvalibleCheckBox_Toggle">
                <TextBlock Text="Show Only Avalible Books" Foreground="#FFFAFAFA"/>
            </CheckBox>
            <ListView x:Name="SearchedBooksListView" Grid.Row="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="#FFFAFAFA" 
                                   FontSize="16"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
